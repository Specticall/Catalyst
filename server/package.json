{
  "name": "nodets-template",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "cross-env ENVIROMENT=DEV nodemon",
    "prod": "cross-env ENVIROMENT=PROD nodemon",
    "build": "tsup ./src/index.ts",
    "seed": "tsx ./src/.scripts/runSeeder.ts",
    "create:router": "tsx ./src/.scripts/createRouter.ts",
    "create:controller": "tsx ./src/.scripts/createController.ts",
    "create:seeder": "tsx ./src/.scripts/createSeeder.ts",
    "insert:controller": "tsx ./src/.scripts/insertController.ts",
    "insert:env": "tsx ./src/.scripts/insertEnv.ts",
    "prepare": "husky",
    "create:env-example": "tsx ./src/.scripts/createEnvExample.ts",
    "test": "jest --watchAll --maxWorkers=1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/core": "^1.10.17",
    "@swc/jest": "^0.2.37",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "cross-env": "^7.0.3",
    "eslint": "^9.19.0",
    "husky": "^8.0.0",
    "nodemon": "^3.1.9",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.6",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@prisma/client": "^6.2.1",
    "axios": "^1.7.9",
    "chalk": "^5.4.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "execa": "^9.5.2",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "prisma": "^6.2.1",
    "zod": "^3.24.2"
  },
  "prisma": {
    "schema": "./src/models"
  },
  "jest": {
    "transform": {
      "^.+\\.(t|j)sx?$": [
        "@swc/jest"
      ]
    },
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./src/test/jest.setup.ts"
    ]
  }
}
