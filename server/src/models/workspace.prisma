model Workspace {
  id             Int             @id @default(autoincrement())
  name           String
  userWorkspaces UserWorkspace[]
  explorer       Json[]          @default([])
}

model UserWorkspace {
  id          Int           @id @default(autoincrement())
  workspaceId Int
  userId      Int
  role        WorkspaceRole

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  user      User      @relation(fields: [userId], references: [id])
}

enum WorkspaceRole {
  owner
  editor
  viewer
}
